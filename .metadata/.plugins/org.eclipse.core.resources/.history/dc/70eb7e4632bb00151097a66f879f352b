package leetcode0116;

public class Solution {
    public String getHint(String secret, String guess) {
        int len = secret.length();
    	int cow = 0;
        int bull = 0;
        char[] sec = secret.toCharArray();
        char[] gue = guess.toCharArray();
        
        HashSet<Character> hs = new HashSet<>();
        for (char s : sec) {
			hs.add(s);
		}
        
        for (int i=0;i<len;i++){
        	if(sec[i]==gue[i]){
        		bull++;
        	}else if(hs.contains(gue[i])){
        		cow++;
        	}
        }
        
        return Integer.toString(bull)+'A'+Integer.toString(cow)+'B';                
    }
}
